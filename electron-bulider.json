// electron-builder.json
{
  "appId": "com.holdcraft.launcher",
  "productName": "HCL",
  "directories": {
    "output": "dist"
  },
  "files": [
    "main.js",
    "preload.js",
    "src/**/*",
    "node_modules/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "build/icons/icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icons/icon.icns"
  },
  "linux": {
    "target": "AppImage",
    "icon": "build/icons/icon.png"
  }
}
